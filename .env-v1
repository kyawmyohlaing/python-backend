# Environment variables for Python Learning Path API

# Application settings
ENVIRONMENT=development
DEBUG=True

# Security settings
SECRET_KEY=your-very-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database settings
DATABASE_URL=postgresql://postgres:password@db:5432/mydb
DEV_DATABASE_URL=postgresql://username:password@localhost:5432/learning_path_dev
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/learning_path_test
PROD_DATABASE_URL=postgresql://username:password@localhost:5432/learning_path_prod

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Learning path settings
DEFAULT_LEARNING_PATH=beginner